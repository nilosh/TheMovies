<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/main_variation"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/main_variation">

        <ImageView
            android:id="@+id/movieDetailCastImage"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:src="@drawable/placeholder_avatar" />

        <TextView
            android:id="@+id/movieDetailCastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/movieDetailCastImage"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:maxWidth="200dp"
            android:text="@string/movie_cast_name"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/movieDetailCastCharacter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/movieDetailCastName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="@string/movie_cast_character"
            android:textAlignment="center"
            android:textColor="@color/ash"
            android:textSize="14sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>